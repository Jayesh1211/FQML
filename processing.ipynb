    "import os\n",
    "import h5py\n",
    "import numpy as np\n",
    "import cv2\n",
    "from PIL import Image  # Ensure you have the latest version of Pillow\n",
    "from os import listdir\n",
    "from timeit import default_timer as timer\n",
    "from datetime import timedelta\n",
    "\n",
    "# Define paths\n",
    "folder = \"/home/afk/Documents/new/FQML/brain_tumor/\"  # Folder containing the .mat files\n",
    "#processFolder = \"/home/afk/Documents/new/FQML/brain_tumor/processed/\"  # Folder to save processed data\n",
    "processFolder = \"/home/afk/Documents/new/FQML/brain_tumor/processed_new/\"  # Folder to save processed data\n",
    "\n",
    "# Ensure the processed folder exists\n",
    "if not os.path.exists(processFolder):\n",
    "    os.makedirs(processFolder)\n",
    "\n",
    "# Resize dimensions\n",
    "#new_size = (64, 64)  # Resize to 64x64 pixels\n",
    "new_size = (2, 2)\n",
    "# Function to preprocess images\n",
    "def preprocess_image(image):\n",
    "    # Convert to PIL Image for resizing\n",
    "    pil_image = Image.fromarray((image * 255).astype(np.uint8))\n",
    "    # Convert RGB to Grayscale\n",
    "    pil_image = pil_image.convert('L')\n",
    "    # Resize the image\n",
    "    pil_image = pil_image.resize(new_size, Image.Resampling.LANCZOS)  # Updated resampling method\n",
    "    # Convert back to numpy array and normalize the image\n",
    "    return np.array(pil_image).astype(np.float32) / 255.0\n",
    "\n",
    "# Start the timer\n",
    "start = timer()\n",
    "\n",
    "# Initialize lists for images and labels\n",
    "images = []\n",
    "labels = []\n",
    "\n",
    "# List all files in the directory\n",
    "directs = sorted(listdir(folder))\n",
    "\n",
    "# Process each .mat file\n",
    "for file in directs:\n",
    "    # Construct the full path\n",
    "    file_path = os.path.join(folder, file)\n",
    "    \n",
    "    # Skip directories and process only .mat files\n",
    "    if os.path.isfile(file_path) and file.endswith('.mat'):\n",
    "        # Open the .mat file\n",
    "        with h5py.File(file_path, 'r') as f:\n",
    "            # Read the image data and label\n",
    "            img = np.array(f.get(\"cjdata/image\"))\n",
    "            label = np.array(f.get(\"cjdata/label\"))[0][0]\n",
    "            \n",
    "            # Check if the image data has the correct shape\n",
    "            if img.shape == (512, 512):\n",
    "                # Preprocess the image\n",
    "                img = preprocess_image(img)\n",
    "                images.append(img)\n",
    "                labels.append(label)\n",
    "            else:\n",
    "                print(f\"Skipping file {file}: unexpected image shape {img.shape}\")\n",
    "\n",
    "# Convert lists to numpy arrays\n",
    "images = np.asarray(images)\n",
    "labels = np.asarray(labels)\n",
    "\n",
    "# Save the processed data to a .npz file\n",
    "np.savez_compressed(os.path.join(processFolder, 'processed_data.npz'), images=images, labels=labels)\n",
    "\n",
    "# End the timer\n",
    "end = timer()\n",
    "time = (end - start)\n",
    "\n",
    "# Print the time taken for processing\n",
    "print(f\"Processing completed in: {str(timedelta(seconds=round(time)))}\")\n",
    "\n",
    "# Print shapes of processed data\n",
    "print(f\"Processed images shape: {images.shape}\")\n",
    "print(f\"Labels shape: {labels.shape}\")\n"
   ]
  }
